<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.demomusicplay">
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.INTERNET" />

    <permission android:name="android.permission.MEDIA_CONTENT_CONTROL" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Song_Artist"
            android:label="@string/title_activity_song__artist" >
        </activity>
        <activity
            android:name=".All_songs_of_Artist"
            android:label="@string/title_activity_all_songs_of__artist" >
        </activity>
        <activity
            android:name=".Album_song_of_Artist"
            android:label="@string/title_activity_album_song_of__artist" >
        </activity>
        <activity
            android:name=".Playsong"
            android:label="@string/title_activity_playsong" >
        </activity>

    </application>

</manifest>